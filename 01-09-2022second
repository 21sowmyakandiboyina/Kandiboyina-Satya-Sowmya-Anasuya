find factorial of a number using functions.
#include<stdio.h>
int main()
{
	int n,f,fact(int);
	printf("enter any number");
	scanf("%d",&n);
	f=fact(n);
	printf("factorial of the given number is %d",f);
	}
	int f;
	fact(int n)
	
	{
		if(n==0||n==1)
		return 1;
		else
		f=n*fact(n-1);
		return (f);
	}
